<div class="landing">
  <section class="landing__signin" id="signin">
    <div class="landing__innertube">
      <img src="<%= asset_path('one21logo.svg') %>" alt="One21 Logo" class="logo-img" />
      <h2><strong>Sign in</strong> to your church account</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.email_field :email,
                          autofocus: true,
                          autocomplete: "email",
                          placeholder: "Email Address" %>

        <%= f.password_field :password,
                             autocomplete: "off",
                             placeholder: "Password" %>

        <!--
        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end -%>
        -->

        <%= f.submit "Sign in", class: "btn" %>
      <% end %>

    </div>
  </section>
</div>
