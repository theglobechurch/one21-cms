
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put , class: "form wrapper__section"}) do |f| %>
  <header class="wrapper__section__header">
    <div class="wrapper__section__header__content">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>
      <p><%= "#{resource.first_name} #{resource.family_name} - #{resource.church.church_name}" %></p>
    </div>
  </header>

  <div class="wrapper__body">
    <%= devise_error_messages! %>

    <div class="form__field">
      <span class="form__field__desc">We need your current password to confirm your changes.</span>
      <%= f.password_field :current_password, autocomplete: "off", class: 'form__input' %>
      <%= f.label :current_password, class: 'form__label' %>
    </div>

    <div class="form__field">
      <%= f.email_field :email, autocomplete: "email", class: 'form__input' %>
      <%= f.label :email, class: 'form__label' %><br />
    </div>

    <div class="form__field">
      <%= f.text_field :first_name, class: 'form__input' %>
      <%= f.label :first_name, class: 'form__label' %><br />
    </div>

    <div class="form__field">
      <%= f.text_field :family_name, class: 'form__input' %>
      <%= f.label :family_name, class: 'form__label' %><br />
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form__field">
      <span class="form__field__desc">
        Leave blank if you don't want to change it. 
        <% if @minimum_password_length %>
          <%= @minimum_password_length %> characters minimum.
        <% end %>
      </span>
      <%= f.password_field :password, autocomplete: "off", class: 'form__input' %>
      <%= f.label :password, class: 'form__label' %>
    </div>

    <div class="form__field">
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form__input' %>
      <%= f.label :password_confirmation, class: 'form__label' %><br />
    </div>

    <%= f.submit 'Update', class: 'btn btn--primary' %>
    
  </div>
<% end %>

