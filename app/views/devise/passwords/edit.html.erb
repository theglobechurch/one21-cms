<div class="landing">
  <section class="landing__signin" id="signin">
    <div class="landing__innertube">

      <img src="<%= asset_path('one21logo.svg') %>" alt="One21 Logo" class="logo-img" />

      <h2>Change your password</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <%= f.hidden_field :reset_password_token %>


          <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Password" %>
 
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Confirm password" %>

          <%= f.submit 'Change', class: 'btn' %>
   
      <% end %>

      <%#= render "devise/shared/links" %>

   </div>
  </section>
</div>
