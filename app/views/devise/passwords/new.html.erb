<div class="landing">
  <section class="landing__signin" id="signin">
    <div class="landing__innertube">

      <img src="<%= asset_path('one21logo.svg') %>" alt="One21 Logo" class="logo-img" />

      <h2>Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= devise_error_messages! %>

          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email address' %>
          <span></span>
          <%= f.submit "Reset" %>
    
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </section>
</div>
